<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.alina.to_dolist.BasicEditor">

    <ca.alina.to_dolist.BigDatePopupButton
        android:id="@+id/bigDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/taskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/task_name_hint"
        android:inputType="text|textAutoCorrect"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bigDate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/startTime"
        android:layout_width="96sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintTop_toBottomOf="@+id/taskName"
        tools:text="9:00 AM"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="@+id/endTime" />

    <ImageButton
        android:id="@+id/startTimeIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/startTime"
        app:layout_constraintEnd_toStartOf="@id/startTime"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        android:contentDescription="Select starting time"/>

    <TextView
        android:id="@+id/startTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:labelFor="@id/startTime"
        android:text="@string/startTimeLabel"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/startTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startTimeIconButton"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/endTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:labelFor="@id/endTime"
        android:text="@string/endTimeLabel"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/endTime"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="@+id/startTimeLabel" />



    <Switch
        android:id="@+id/endTimeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTime"
        tools:layout_editor_absoluteX="305dp" />

    <EditText
        android:id="@+id/endTime"
        android:enabled="false"
        android:layout_width="96sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toStartOf="@+id/endTimeSwitch"
        tools:text="9:30 AM"
        tools:layout_editor_absoluteX="193dp"
        app:layout_constraintTop_toTopOf="@+id/endTimeSwitch"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/endTimeSwitch"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:id="@+id/endTimeIconButton"
        android:tint="@color/tintBtnDisabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/endTime"
        app:layout_constraintEnd_toStartOf="@+id/endTime"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        android:contentDescription="Select ending time" />

</android.support.constraint.ConstraintLayout>
