<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.alina.to_dolist.BasicEditor">

    <!-- TODO dummy date picker -->
    <RelativeLayout
        android:id="@+id/dateDisplay"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/dayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/monthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dayOfWeek"
            android:layout_below="@+id/dayOfWeek"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="18dp"
            android:text="May 14"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/relativeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/monthDate"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/monthDate"
            android:text="(Today)"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="New task"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateDisplay" />
</android.support.constraint.ConstraintLayout>
